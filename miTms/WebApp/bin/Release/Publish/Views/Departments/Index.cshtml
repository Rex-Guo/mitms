        //显示帮助信息
        function dohelp() {

        }
		 //datagrid 增删改查操作
          var $dg = $("#departments_datagrid").datagrid({
                        rownumbers:true,
				        checkOnSelect:true,
				        selectOnCheck:true,
				        idField:'Id',
				        sortName:'Id',
				        sortOrder:'desc',
				        remoteFilter: true,
				        singleSelect: true,
				        toolbar: '#departments_toolbar',
				        url: '/Departments/GetData',
				        method: 'get',
				        onClickCell: onClickCell,
				        pagination: true,
                        striped:true,   
                         columns: [[
                         /*{ field: 'ck', checkbox: true },*/
                         { field: '_operate1', title:'操作', width: 120, sortable: false, resizable: true, formatter: showdetailsformatter},
