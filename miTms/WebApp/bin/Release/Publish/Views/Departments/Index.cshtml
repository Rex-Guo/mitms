									 {field:'Name', 
              title:'@Html.DisplayNameFor(model => model.Name)', 
              width:140,
              editor:{
                      type:'textbox',
                      options:{ prompt:'部门名称',required:true ,validType:'length[0,50]'  }  
                     },
              sortable:true,
              resizable:true },
											 {field:'Manager', 
              title:'@Html.DisplayNameFor(model => model.Manager)', 
              width:140,
              editor:{
                      type:'textbox',
                      options:{ prompt:'部门经理',required:false ,validType:'length[0,20]'  }  
                     },
              sortable:true,
              resizable:true },
									{field:'CompanyId',
             title:'@Html.DisplayNameFor(model => model.CompanyId)',
             width:160, 
             sortable:true, 
             resizable:true,
             formatter:function(value,row) {
							return row.CompanyName;
						},
			 editor:{
					 type:'combobox',
					 options:{
